<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_transparent">

    <!--
        TextView 여백 없이 딱 잡히도록 수정 필요
        이후 title에 marginTop 추가
    -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/temp_map"/>

    <TextView
        android:id="@+id/tv_login_logo"
        android:layout_width="184dp"
        android:layout_height="0dp"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/pyeongchang_peace_bold"
        android:text="@string/popple_logo"
        android:textAlignment="center"
        android:textAppearance="@style/small_logo"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_bold"
        android:lineHeight="20dp"
        android:text="@string/popple_message_oneline"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_login_logo" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_kakao_login"
        android:layout_width="240dp"
        android:layout_height="44dp"
        android:layout_marginTop="60dp"
        android:drawableStart="@drawable/kakao_icon_22"
        android:paddingStart="38dp"
        android:drawablePadding="-18dp"
        android:background="@drawable/bt_yellow_round_100"
        android:fontFamily="@font/pretendard_bold"
        android:letterSpacing="-0.025"
        android:text="카카오톡으로 계속하기"
        android:textColor="@color/kakaoText"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_login_title" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_google_login"
        android:layout_width="240dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/google_icon_22"
        android:paddingStart="38dp"
        android:drawablePadding="-18dp"
        android:background="@drawable/bt_white_round_100"
        android:fontFamily="@font/pretendard_bold"
        android:letterSpacing="-0.025"
        android:text="구글 아이디로 계속하기"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_kakao_login" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_naver_login"
        android:layout_width="240dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/naver_icon_22"
        android:paddingStart="38dp"
        android:drawablePadding="-18dp"
        android:background="@drawable/bt_green_round_100"
        android:fontFamily="@font/pretendard_bold"
        android:letterSpacing="-0.025"
        android:text="네이버로 계속하기"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_google_login" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_login_normal"
        android:layout_width="240dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bt_white_round_100"
        android:fontFamily="@font/pretendard_bold"
        android:letterSpacing="-0.025"
        android:text="일반 로그인하기"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_naver_login" />

    <TextView
        android:id="@+id/tv_login_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="52dp"
        android:fontFamily="@font/pretendard"
        android:text="건너뛰기"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>